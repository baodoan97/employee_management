<style media="screen">
  @media only screen and (max-width: 600px) {
   body {
     background-color: lightblue;
     text-align: center !important;
   }
    input[type=text] { text-align:center }
		input[type=password] { text-align:center }
 }
 </style>
<div class="background-login">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="login">
					<h1 class="text-center">
					Login
					</h1>
					<div class="input">
						<%= form_for(:session , :html => {class: "form-horizontal", role: "form"},url: login_path) do |f| %>
						<div class="form-group">
							<%= f.label :email ,class: "col-sm-2 control-label"%>
							<div class="col-12">
								<%= f.text_field :email, class: "form-control", placeholder: "User name", autofocus: true  %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :password ,class: "col-sm-2 control-label"%>
							<div class="col-12">
								<%= f.password_field :password, class: "form-control", placeholder: "Place input password",type: "password", autofocus: true , autocomplete: "off"  %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-12">
								<%= f.submit "Login" , class: "btn btn-lg btn-primary center" %>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
