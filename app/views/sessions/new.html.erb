<style media="screen">
  @media only screen and (max-width: 600px) {
   body {
     background-color: lightblue;
     text-align: center !important;
   }
    input[type=text] { text-align:center }
		input[type=password] { text-align:center }
 }
 </style>
<div class="background-login">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="login">
					<h1 class="text-center">
					Login
					</h1>
					<div class="input">
						<%= form_for(:session , :html => {class: "form-horizontal", role: "form"},url: login_path) do |f| %>
						<div class="form-group">

							<div class="col-sm-10">
								<%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true  %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-10">
								<%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true , autocomplete: "off"  %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Login" , class: "btn-block btn-lg btn-primary center login-btn" %>

							</div>
						</div>
						<% end %>
					</div>
					<p>Dont have account yet? <%= link_to 'Click here', signup_path %>  to registed!</p>
				</div>
			</div>
		</div>
	</div>
</div>
